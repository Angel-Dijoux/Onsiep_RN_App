{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "baseUrl": ".",
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "$shared/*": ["./shared/*"],
      "$ui/*": ["./shared/ui/*"],
      "$assets/*": ["./assets/*"],
      "$screens/*": ["./screens/*"],
      "$utils/*": ["./utils/*"],
      "*": ["*", "*.ios.tsx", "*.android.tsx"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist"
  ]
}
